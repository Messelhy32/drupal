<div class="event">
    <h1>{{ title }}</h1>
    {% if image_url %}
      <img src="{{ image_url }}" alt="{{ title }}" />
    {% endif %}
    {% if description %}
      <p>{{ description|raw }}</p>
    {% endif %}
    <p><strong>Category:</strong> {{ category }}</p>
    <p><strong>Start:</strong> {{ start_time }}</p>
    <p><strong>End:</strong> {{ end_time }}</p>
    <p>{{ edit_link|raw }} | {{ delete_link|raw }}</p>
</div>
