<div class="event-list">
  {% for event in events %}
      <div class="event-item">
          <h2>{{ event.title }}</h2>
          <p>{{ event.description }}</p>
          <p><strong>Start:</strong> {{ event.start_time }}</p>
          <p><strong>End:</strong> {{ event.end_time }}</p>
          <p>
              <a href="{{ path('entity.event.edit_form', {'event': event.id}) }}">Edit</a> | 
              <a href="{{ path('entity.event.delete_form', {'event': event.id}) }}">Delete</a>
          </p>
      </div>
  {% endfor %}
</div>
